{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Run PHPUnit with Mockery",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bin/phpunit",
            "args": [
                "--configuration",
                "${workspaceFolder}/phpunit.xml"
            ],
            "cwd": "${workspaceFolder}",
            "port": 9003
        }
    ]
}
